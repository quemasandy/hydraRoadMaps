{
  "name": "serverless-security-roadmap",
  "version": "1.0.0",
  "description": "Roadmap de aprendizaje de Seguridad Serverless (DevSecOps) con TypeScript",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testMatch='**/*.security.test.ts'",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --ext .ts,.js . --fix",
    "format": "prettier --check \"**/*.{ts,js,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,json,md}\"",
    "audit:deps": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "scan:snyk": "snyk test",
    "scan:snyk:fix": "snyk wizard",
    "scan:secrets": "git secrets --scan",
    "scan:iac": "checkov -d .",
    "scan:sast": "semgrep --config=auto .",
    "security:check": "npm run lint && npm run audit:deps && npm run scan:secrets",
    "security:report": "ts-node scripts/security-report.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "aws",
    "serverless",
    "security",
    "devsecops",
    "lambda",
    "api-gateway",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-kms": "^3.490.0",
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-secrets-manager": "^3.490.0",
    "@aws-sdk/client-ssm": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
